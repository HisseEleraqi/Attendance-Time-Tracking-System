@model AttendenceSystem.Models.Schedule



@{
    string TrackName = ViewData["TrackName"] as string;
    ViewData["Title"] = "Delete";
}


<h1>Track: @TrackName</h1>
<h1>Delete Schedule</h1

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Model.Date
        </dd>
        <dt class = "col-sm-2">
            StartTime
        </dt>
        <dd class = "col-sm-10">
            @Model.StartTime
        </dd>
        <dt class = "col-sm-2">
            EndTime
        </dt>
        <dd class = "col-sm-10">
            @Model.EndTime
        </dd>
        @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tracks)
        </dt>
         *@@* <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tracks.Id)
        </dd> *@
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
@section SideBar {

    <li>
        <a href="/Permissions">Permissions</a>
    </li>
    <li>
        <a href="/Schedules">Schedule</a>
    </li>

}