@model AttendenceSystem.Models.Schedule

@{
    string TrackName = ViewData["TrackName"] as string;
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Instructor.cshtml";
}
<style>
    .input-group {
        display: flex;
        align-items: center;
        border-radius: 5px;
        border: 1px solid #ced4da;
        overflow: hidden;
    }

        .input-group .form-control {
            flex: 1;
            border: none;
            padding: 10px;
        }

        .input-group .input-group-addon {
            border: none;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .fa {
        display: inline-block;
        font: normal normal normal 14px / 1 FontAwesome;
        font-size: inherit;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        color: #ffc107;
    }
</style>


<h1>@TrackName</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Date" class="form-control" />
                    <span class="input-group-addon"><i class="fa fa-solid fa-calendar"></i></span>
                </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="StartTime" class="form-control" />
                    <span class="input-group-addon"><i class="fa fa-solid fa-hourglass-start"></i></span>
                </div>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="EndTime" class="form-control" />
                    <span class="input-group-addon"><i class="fa fa-solid fa-hourglass-end"></i></span>
                </div>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="TrackId" class="control-label"></label>
                <select asp-for="TrackId" class ="form-control" asp-items="ViewBag.TrackId"></select>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Schedules</a>
</div>

