@model IEnumerable<Permision>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<style>

    table tr th
    {
        background-color:#FCFCFD;
        color:#788193;
        width: 248px;
    }
    table
    {
        font-size: 0.9rem;
        margin-bottom: 1rem;
        color: #212529;
        border-bottom: 1px solid #788193;
    }
    hr
    {
        margin-top: -1rem;
        margin-left: 1px;
        border: 0;
        border-top: 11px solid #ffc107;
        width: 128px;
        border-radius: 6px;
    }
    a{
        color: black;
    }

    .fa-pencil {
        color: #337f33;
        font-size: 1.2rem;
        background-color: #b7e1b6;
        width: 100%;
        text-align: center;
        padding: 3px;
        border-radius: 7px;
    }
    .fa-trash-o {
        color: #ff5c80;
        font-size: 1.2rem;
        padding: 3px;
        background-color: #fbcbd6;
        text-align: center;
        border-radius: 7px;
        width:100%;
    }

    .fa-eye {
        color: #4789f7;
        font-size: 1.2rem;
        background-color: #dae6f9;
        padding: 3px;
        text-align: center;
        border-radius: 7px;
        width: 100%;
    }
    .late
    {
        text-align: center;
        color: #ffc107;
    }
    .Absent
    {
        text-align:center;
        color: #ff5c80;
    }
    .row
    {
        display:flex;
        justify-content:space-between;
    }
    .right
    {
        align-items: center;
        justify-content: center;
        margin: auto;
        display: flex;
        justify-content: right;
        color:black;
    }
    .container
    {


        width: 100%;
        padding-right: 0px; 
        padding-left: 0px; 
        margin-right: auto;
        margin-left: auto;
    }

    .row.search {
        display: flex;
        justify-content: flex-end;
        padding-left: 17px;
    }

    .input-group {
        position: relative;
        width: 233px; 
    }

    .input-group-append {
        position: absolute;
        right: 0;
        top: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        padding: 0 10px; 
        background-color: #ffffff; 
        border: 1px solid #788193; 
        border-radius: 0 7px 7px 0;
    }

    .input-group-text {
        background-color: transparent;
        border: none;
        color: #788193; 
        cursor: pointer;
    }
    .alert-danger
    {
        text-align:center;

    }

    .accepted {
        color: #337f33;
        font-size: 1rem;
        background-color: #b7e1b6;
        width: 100%;
        text-align: center;
        padding: 3px;
        border-radius: 7px;
    }

    .rejected {
        color: #ff5c80;
        font-size: 1rem;
        padding: 3px;
        background-color: #fbcbd6;
        text-align: center;
        border-radius: 7px;
        width: 100%;
    }

    .pending {
        color: #4789f7;
        font-size: 1rem;
        background-color: #dae6f9;
        padding: 3px;
        text-align: center;
        border-radius: 7px;
        width: 100%;
    }
</style>
<div class="row">
    <div class="col">
        <h1>permisions</h1>
        <hr />
    </div>
    <div class="col right">
        <a class="btn btn-warning" asp-action="AddPermision" asp-controller="Student">New Permision + </a>
    </div>
</div>
<div class="container">
    <table class="table table-border table-responsive table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Reason</th>
                <th>State</th>
                <th style="width:71px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var permision in Model)
            {
                <tr>
                    <td>@permision.Date.ToString("yyyy-MM-dd")</td>
                    <td>@permision.Type</td>
                    <td>@permision.Reason</td>
                    <td>
                        @switch (permision.Status)
                        {
                            case PermisionStatus.Pending:
                                <span class="pending">@permision.Status</span>
                                break;
                            case PermisionStatus.Approved:
                                <span class="accepted">@permision.Status</span>
                                break;
                            case PermisionStatus.Rejected:
                                <span class="rejected">@permision.Status</span>
                                break;
                            default:
                                <span>@permision.Status</span>
                                break;
                        }
                    </td>
                    @if (permision.Status == PermisionStatus.Pending)
                    {
                        <td><a asp-action="DeletePermision" asp-controller="Student" asp-route-permisionId=@permision.Id><i class="fa fa-trash-o"></i></a></td>
                    }
                </tr>
            }
        </tbody>

    </table>
</div>

