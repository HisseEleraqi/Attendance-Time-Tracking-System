@model IEnumerable<Track>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<style>

    table tr th {
        background-color: #FCFCFD;
        color: #788193;
        width: 167px;
        text-align: center;
    }

    table {
        font-size: 0.9rem;
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        border-bottom: 1px solid #788193;
        text-align: center;
    }

    hr {
        margin-top: -1rem;
        margin-left: 1px;
        border: 0;
        border-top: 11px solid #ffc107;
        width: 128px;
        border-radius: 6px;
    }

    a {
        color: black;
    }

    .fa-pencil {
        color: #337f33;
        font-size: 1.2rem;
        background-color: #b7e1b6;
        width: 100%;
        text-align: center;
        padding: 3px;
        border-radius: 7px;
    }

    .fa-trash-o {
        color: #ff5c80;
        font-size: 1.2rem;
        padding: 3px;
        background-color: #fbcbd6;
        text-align: center;
        border-radius: 7px;
        width: 100%;
    }

    .fa-eye {
        color: #4789f7;
        font-size: 1.2rem;
        background-color: #dae6f9;
        padding: 3px;
        text-align: center;
        border-radius: 7px;
        width: 100%;
    }

    .late {
        text-align: center;
        color: #ffc107;
    }

    .Absent {
        text-align: center;
        color: #ff5c80;
    }

    .row {
        display: flex;
        justify-content: space-between;
    }

    .right {
        align-items: center;
        justify-content: center;
        margin: auto;
        display: flex;
        justify-content: right;
        color: black;
    }

    .container {
        width: 100%;
        padding-right: 0px;
        padding-left: 0px;
        margin-right: auto;
        margin-left: auto;
    }

    .row.search {
        display: flex;
        justify-content: flex-end;
        padding-left: 17px;
    }

    .input-group {
        position: relative;
        width: 233px;
    }

    .input-group-append {
        position: absolute;
        right: 0;
        top: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        padding: 0 10px;
        background-color: #ffffff;
        border: 1px solid #788193;
        border-radius: 0 7px 7px 0;
    }

    .input-group-text {
        background-color: transparent;
        border: none;
        color: #788193;
        cursor: pointer;
    }

    .alert-danger,.alert-success {
        text-align: center;
    }

</style>
@if (TempData.ContainsKey("SuccessEdit"))
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessEdit"]
    </div>
}

@if (TempData.ContainsKey("FaildEdit"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["FaildEdit"]
    </div>
}
<div class="row">
    <div class="col">
        <h1>Tracks</h1>
        <hr />
    </div>
</div>
<div class="container">
    <table class="table table-border table-responsive table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Supervisor</th>
                <th>Capacity</th>
                <th>Program</th>
                <th>Rolled Student</th>
                <th>Active</th>
                <th style="width:71px">View</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Track in Model)
            {
                <tr>
                    <td>@Track.Name</td>
                    <td>
                        <select class="form-select supervisor-select" data-track-id="@Track.Id" name="SupervisorId">
                            <option value="@Track.SupervisorId" selected>@Track.Supervisor.Name</option>
                            @foreach (var supervisor in ViewBag.supervisors)
                            {
                                <option value="@supervisor.Id">@supervisor.Name</option>
                            }
                        </select>

                    </td>
                    <td>@Track.Capacity</td>
                    <td>@Track.Program.Name</td>
                        @if (ViewBag.numberofstudent.ContainsKey(Track.Id))
                        {
                        <td class="Absent">@ViewBag.numberofstudent[Track.Id]</td>
                        }
                        else
                        {
                        <td class="Absent">0</td>

                        }
                    <td>
                        <div class="form-check form-switch" style="text-align:center">
                            <input class="form-check-input track-activity"
                                   type="checkbox"
                                   data-track-id="@Track.Id"
                                   id="isActiveSwitch_@Track.Id"
                            @(Track.IsActive ? "checked" : "")
                            @(ViewBag.numberofstudent.ContainsKey(Track.Id) && ViewBag.numberofstudent[Track.Id] > 0 ? "disabled" : "")>
                        </div>

                    </td>
                    <td><a asp-action="TrackDetails" asp-controller="Admin" asp-route-TrackId="@Track.Id"><i class="fa fa-eye"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
    <div class="alert alert-danger" id="noDataMessage" style="display: none;">No data found.</div>

</div>
@section Scripts2 {
    <script>
        $(document).ready(function () {
            $('.supervisor-select').change(function () {
                var trackId = $(this).data('track-id');
                var supervisorId = $(this).val();

                $.ajax({
                    type: 'POST',
                    url: '/Admin/EditTrackSupervisor',
                    data: { TrackId: trackId, SupervisorId: supervisorId },
                    success: function (response) {
                        location.reload();
                        $('#supervisorName_' + trackId).text(response.newSupervisorName);
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                    }
                });
            });

            $('.track-activity').change(function () {
                var trackId = $(this).data('track-id');
                var isActive = $(this).prop('checked');

                $.ajax({
                    type: 'POST',
                    url: '/Admin/EditTrackActive',
                    data: { TrackId: trackId, ActiveState: isActive },
                    success: function (response) {
                        location.reload();

                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                    }
                });
            });


            $('#searchText').on('keyup', function () {
                var searchText = $(this).val().toLowerCase();
                var isAnyRowVisible = false;

                $('tbody tr').each(function () {
                    var rowData = $(this).text().toLowerCase();
                    if (rowData.indexOf(searchText) === -1) {
                        $(this).hide();
                    } else {
                        $(this).show();
                        isAnyRowVisible = true;
                    }
                });

                if (isAnyRowVisible) {
                    $('#noDataMessage').hide();
                } else {
                    $('#noDataMessage').show();
                }
            });
        });
    </script>
}

