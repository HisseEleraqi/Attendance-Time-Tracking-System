@model Track

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<style>

    .header {
        padding: 6px;
        background-color: #ffff;
        border: 2px solid #575a89;
        border-radius: 43px;
    }

    .image {
        display: flex;
        flex-direction: row-reverse;
        align-items: center;
    }
</style>
<div class="row header">
    <div class="col">
        <h3>Track</h3>
        <hr style=" margin-top: -1rem;
        margin-left: 1px;
        border: 0;
        border-top: 11px solid #ffc107;
        width: 76px;
        border-radius: 6px;" />
    </div>
    <div class="col image">
        <img src="~/Images/undraw_Detailed_analysis_re_tk6j.png" style="width: 116px;height: 86px;" />
    </div>

</div>
<div>
    <br />
    <h4>Track Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Program</dt>
        <dd class="col-sm-10">@Model.Program.Name</dd>

        <dt class="col-sm-2">Supervisor</dt>
        <dd class="col-sm-10">@Model.Supervisor.Name</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>
</div>

<div>
    <h4>Instructor Assigned</h4>
    <hr />
    @if (ViewBag.Instructors != null && ViewBag.Instructors.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr style="background-color: #f8f9fa;">
                    <th>Instructor Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var instructor in ViewBag.Instructors)
                {
                    <tr>
                        <td>@instructor.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="color: #6c757d; text-align:center" class="alert alert-danger">No Instructor assigned yet.</p>
    }
</div>
