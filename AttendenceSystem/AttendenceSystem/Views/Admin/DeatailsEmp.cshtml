@model Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<style>

    .header {
        padding: 6px;
        background-color: #ffff;
        border: 2px solid #575a89;
        border-radius: 43px;
    }

    .image {
        display: flex;
        flex-direction: row-reverse;
        align-items: center;
    }
</style>
<div class="row header">
    <div class="col">
        <h3>Employees</h3>
        <hr style=" margin-top: -1rem;
        margin-left: 1px;
        border: 0;
        border-top: 11px solid #ffc107;
        width: 76px;
        border-radius: 6px;" />
    </div>
    <div class="col image">
        <img src="~/Images/undraw_Web_search_re_efla.png" style="width: 116px;height: 86px;" />
    </div>

</div>
<div>
    <br />
    <h4 class="bg-info font-weight-bolder">@Model.Name Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Mobile</dt>
        <dd class="col-sm-10">@Model.Mobile</dd>

        <dt class="col-sm-2">EmpType</dt>
        <dd class="col-sm-10">@Model.EmpType</dd>

        <dt class="col-sm-2">Password</dt>
        <dd class="col-sm-10">@Model.Password</dd>

        
    </dl>
</div>


