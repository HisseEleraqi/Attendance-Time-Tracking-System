@model Instructor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<style>

    .header {
        padding: 6px;
        background-color: #ffff;
        border: 2px solid #ffc107;
        border-radius: 20px;
    }
    .image {
        display: flex;
        flex-direction: row-reverse;
        align-items: center;
    }
</style>
<div class="row header">
    <div class="col">
        <h3>Instructor</h3>
        <hr style=" margin-top: -1rem;
        margin-left: 1px;
        border: 0;
        border-top: 11px solid #ffc107;
        width: 76px;
        border-radius: 6px;" />
    </div>
    <div class="col image">
        <img src="~/Images/undraw_Web_search_re_efla.png" style="width: 116px;height: 86px;" />
    </div>

</div>
<div>
    <br />
    <h4 >Instructor Information</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Mobile</dt>
        <dd class="col-sm-10">@Model.Mobile</dd>

        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.Salary</dd>

        <dt class="col-sm-2">Password</dt>
        <dd class="col-sm-10">@Model.Password</dd>

        <dt class="col-sm-2">Hire Date</dt>
        <dd class="col-sm-10">@Model.HireDate.ToShortDateString()</dd>
    </dl>
</div>

<div>
    <h4>Tracks Assigned</h4>
    <hr />
    @if (ViewBag.Tracks != null && ViewBag.Tracks.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr style="background-color: #f8f9fa;">
                    <th>Track Name</th>
                    <th>Program</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var track in ViewBag.Tracks)
                {
                    <tr>
                        <td>@track.Name</td>
                        <td>@track.Program.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="color: #6c757d; text-align:center" class="alert alert-danger">No tracks assigned for this instructor.</p>
    }
</div>
